doctype html
html(lang="en")
    head 
        title Lagersystem - Produkter  
        link(rel="stylesheet", href="/styles/style.css")

    body
        header(class="nice-header")
            h1 Lagersystem
            ul 
                li 
                    a Forside
                li 
                    a Produkter
                li 
                    a Andet...

        main 
            ul(class="filter")
                li
                    p Mærke:
                        select
                            option Alle
                            option Mærke 1
                            option Mærke 2
                            option Mærke 3
                li 
                    p Mængde:
                        select
                            option Alle
                            option 10-30
                            option 30-60
                            option 60-100+
                li
                    p Pris:
                        select
                            option Alle
                            option 10-30 kr.
                            option 30-60 kr. 
                            option 60-100+ kr.
                li
                    p Udløbningsdato: 
                        input(type="date")
                li
                    p Lokation:
                        select
                            option Alle
                            option Skåde
                            option Aarhus
                            option Vandrup

            button Register produkt

            table 
                thead
                    tr 
                        th Mærke 
                        th Mængde 
                        th Pris 
                        th Udløbningsdato 
                        th Lokation
                        th Rediger 
                        th Slet
                tbody
                    each product in products
                        tr
                            td= product.brand
                            td= product.quantity
                            td= product.price + ' kr.'
                            td= product.date
                            td= product.location
                            td
                                button Knap
                            td
                                button Knap

        footer 
            p Lagersystem - copyrights reserved since 2023