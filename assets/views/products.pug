doctype html
html(lang="en")
    head 
        title Lagersystem - Produkter  
        link(rel="stylesheet", href="/styles/style.css")

    body
        header(class="nice-header")
            h1 Lagersystem
            ul 
                li 
                    a Forside
                li 
                    a Produkter
                li 
                    a Andet...

        main 
            ul(class="filter")
                li
                    p Mærke:
                        select
                            option Alle
                            option Mærke 1
                            option Mærke 2
                            option Mærke 3
                li 
                    p Mængde:
                        select
                            option Alle
                            option 10-30
                            option 30-60
                            option 60-100+
                li
                    p Pris:
                        select
                            option Alle
                            option 10-30 kr.
                            option 30-60 kr. 
                            option 60-100+ kr.
                li
                    p Udløbningsdato: 
                        input(type="date")
                li
                    p Lokation:
                        select
                            option Alle
                            option Skåde
                            option Aarhus
                            option Vandrup

            button Register produkt

            table 
                tr 
                    th Mærke 
                    th Mængde 
                    th Pris 
                    th Udløbningsdato 
                    th Lokation
                    th Rediger 
                    th Slet
                tr
                    td Tuborg Classic
                    td 18 stk.
                    td 50 kr.
                    td ons. 15 nov. 2023
                    td Skåde
                    td
                        button Knap 
                    td
                        button Knap

        footer 
