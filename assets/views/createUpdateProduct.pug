doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Produkt
    body
    - var buttonText = product ? "Update product" : "Add product"
    if product
        - var brand = product.brand;
        - var price = product.price;
        - var date = product.expirationDate
        - var location = product.location
        - var quantity = product.quantity
    form(action="/productEndpoint", method="post")
        label(for="brand") Brand:
        input(type="text" id="brand" value=brand)
        br
        label(for="price") Price: 
        input(type="number" id="price" value=price)
        br
        label(for="date") Date: 
        input(type="date" id="date" value=date)
        br
        label(for="location") Location: 
        input(type="text" id="location" value=location)
        br
        label(for="quantity")
        input(type="number" id="quantity" value=quantity)
        br
        button(type="submit")= buttonText